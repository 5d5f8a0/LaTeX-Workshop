{
  "deps": [
    {
      "name": "translations"
    }
  ],
  "macros": [
    {
      "name": "shortversion",
      "arg": {
        "format": "{}",
        "snippet": "{${1:options%keyvals}}",
        "keys": [
          "\\begin{changelog},\\begin{version},\\shortversion",
          "\\shortversion"
        ],
        "keyPos": 0
      }
    },
    {
      "name": "added"
    },
    {
      "name": "changed"
    },
    {
      "name": "deprecated"
    },
    {
      "name": "removed"
    },
    {
      "name": "fixed"
    },
    {
      "name": "security"
    },
    {
      "name": "misc"
    },
    {
      "name": "newchangelogsection",
      "arg": {
        "format": "{}{}",
        "snippet": "{${1:command}}{${2:description%text}}"
      }
    },
    {
      "name": "changelogyanked",
      "unusual": true
    },
    {
      "name": "changelogremark",
      "unusual": true,
      "arg": {
        "format": "{}",
        "snippet": "{${1:remark%text}}"
      }
    }
  ],
  "envs": [
    {
      "name": "changelog"
    },
    {
      "name": "changelog",
      "arg": {
        "format": "[]",
        "snippet": "[${1:options%keyvals}]"
      }
    },
    {
      "name": "version"
    },
    {
      "name": "version",
      "arg": {
        "format": "[]",
        "snippet": "[${1:options%keyvals}]"
      }
    },
    {
      "name": "changelogdescription",
      "unusual": true
    },
    {
      "name": "changelogitemize",
      "unusual": true
    }
  ],
  "keys": {
    "\\begin{changelog}": [
      "section",
      "sectioncmd=${1:command}\r",
      "title=${1:text}\r",
      "label="
    ],
    "\\begin{changelog},\\begin{version},\\shortversion": [
      "version=${1:version}\r",
      "v=${1:version}\r",
      "author=${1:author}\r",
      "date=${1:date}\r",
      "yanked",
      "remark=${1:text}\r",
      "remarks={${1:text1,text2,...}}\r",
      "simple",
      "short"
    ],
    "\\shortversion": [
      "changes=${1:change text}\r"
    ]
  },
  "args": []
}