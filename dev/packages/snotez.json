{
  "deps": [
    {
      "name": "etoolbox"
    },
    {
      "name": "pgfopts"
    },
    {
      "name": "marginnote"
    },
    {
      "name": "perpage"
    }
  ],
  "macros": [
    {
      "name": "sidenote",
      "arg": {
        "format": "{}",
        "snippet": "{${1:text}}"
      }
    },
    {
      "name": "sidenote",
      "arg": {
        "format": "[]{}",
        "snippet": "[${2:mark}]{${1:text}}"
      }
    },
    {
      "name": "sidenote(offset)",
      "unusual": true,
      "arg": {
        "format": "{}",
        "snippet": "{${1:text}}"
      }
    },
    {
      "name": "sidenote(offset)",
      "unusual": true,
      "arg": {
        "format": "[]{}",
        "snippet": "[${2:mark}]{${1:text}}"
      }
    },
    {
      "name": "sidenote",
      "if": "dblarg=true",
      "arg": {
        "format": "[][]{}",
        "snippet": "[${2:offset}][${3:mark}]{${1:text}}"
      }
    },
    {
      "name": "sidenotemark",
      "unusual": true
    },
    {
      "name": "sidenotemark",
      "unusual": true,
      "arg": {
        "format": "[]",
        "snippet": "[${1:mark}]"
      }
    },
    {
      "name": "sidenotetext",
      "arg": {
        "format": "{}",
        "snippet": "{${1:text}}"
      }
    },
    {
      "name": "sidenotetext",
      "arg": {
        "format": "[]{}",
        "snippet": "[${2:mark}]{${1:text}}"
      }
    },
    {
      "name": "newsnotezfloat",
      "unusual": true,
      "arg": {
        "format": "{}",
        "snippet": "{${1:name}}"
      }
    },
    {
      "name": "newsnotezfloat",
      "unusual": true,
      "arg": {
        "format": "[]{}",
        "snippet": "[${2:code}]{${1:name}}"
      }
    },
    {
      "name": "setsidenotes",
      "arg": {
        "format": "{}",
        "snippet": "{${1:options%keyvals}}",
        "keys": [
          "\\setsidenotes"
        ],
        "keyPos": 0
      }
    }
  ],
  "envs": [
    {
      "name": "sidefigure"
    },
    {
      "name": "sidetable"
    }
  ],
  "keys": {
    "\\setsidenotes": [
      "dblarg",
      "marginnote",
      "text-format=${1:code}\r",
      "text-format+=${1:code}\r",
      "perpage",
      "perchapter",
      "note-mark-sep=${1:code}\r",
      "note-mark-format=${1:code}\r",
      "text-mark-format=${1:code}\r",
      "footnote",
      "sidefloat-format=${1:code}\r",
      "sidefloat-format+=${1:code}\r"
    ]
  },
  "args": []
}