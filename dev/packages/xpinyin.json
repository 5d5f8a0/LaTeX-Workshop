{
  "deps": [
    {
      "name": "CJKutf8"
    }
  ],
  "macros": [
    {
      "name": "xpinyin",
      "arg": {
        "format": "{}{}",
        "snippet": "{${1:character}}{${2:pinyin}}"
      }
    },
    {
      "name": "xpinyin",
      "arg": {
        "format": "[]{}{}",
        "snippet": "[${3:options%keyvals}]{${1:character}}{${2:pinyin}}"
      }
    },
    {
      "name": "xpinyin*",
      "arg": {
        "format": "{}",
        "snippet": "{${1:text}}"
      }
    },
    {
      "name": "xpinyin*",
      "arg": {
        "format": "[]{}",
        "snippet": "[${2:options%keyvals}]{${1:text}}"
      }
    },
    {
      "name": "pinyin",
      "arg": {
        "format": "{}",
        "snippet": "{${1:pinyin}}"
      }
    },
    {
      "name": "pinyin",
      "arg": {
        "format": "[]{}",
        "snippet": "[${2:options%keyvals}]{${1:pinyin}}"
      }
    },
    {
      "name": "setpinyin",
      "arg": {
        "format": "{}{}",
        "snippet": "{${1:characters}}{${2:pinyin}}"
      }
    },
    {
      "name": "xpinyinsetup",
      "arg": {
        "format": "{}",
        "snippet": "{${1:options%keyvals}}",
        "keys": [
          "\\begin{pinyinscope},\\xpinyin,\\pinyin,\\xpinyinsetup"
        ],
        "keyPos": 0
      }
    },
    {
      "name": "disablepinyin"
    },
    {
      "name": "enablepinyin"
    }
  ],
  "envs": [
    {
      "name": "pinyinscope"
    },
    {
      "name": "pinyinscope",
      "arg": {
        "format": "[]",
        "snippet": "[${1:options%keyvals}]"
      }
    }
  ],
  "keys": {
    "\\begin{pinyinscope},\\xpinyin,\\pinyin,\\xpinyinsetup": [
      "ratio=${1:number}\r",
      "vsep=",
      "hsep=",
      "pysep=${1:glue}\r",
      "font=${1:font}\r",
      "format=${1:format}\r",
      "multiple=${1:format}\r",
      "footnote"
    ]
  },
  "args": []
}