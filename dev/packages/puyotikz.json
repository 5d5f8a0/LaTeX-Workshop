{
  "deps": [
    {
      "name": "pythontex"
    },
    {
      "name": "tikz"
    },
    {
      "name": "keyval"
    }
  ],
  "macros": [
    {
      "name": "puyosmallscale"
    },
    {
      "name": "puyobigscale"
    },
    {
      "name": "puyoboard",
      "arg": {
        "format": "{}{}",
        "snippet": "{${1:board string}}{${2:next puyos string}}"
      }
    },
    {
      "name": "puyoboard",
      "arg": {
        "format": "[]{}{}",
        "snippet": "[${3:options%keyvals}]{${1:board string}}{${2:next puyos string}}"
      }
    },
    {
      "name": "puyomarker",
      "arg": {
        "format": "{}",
        "snippet": "{${1:marker string}}"
      }
    },
    {
      "name": "puyogrid",
      "arg": {
        "format": "{}",
        "snippet": "{${1:board string}}"
      }
    },
    {
      "name": "puyogrid",
      "arg": {
        "format": "[]{}",
        "snippet": "[${2:options%keyvals}]{${1:board string}}"
      }
    },
    {
      "name": "puyocolor",
      "unusual": true,
      "arg": {
        "format": "{}{}",
        "snippet": "{${1:name}}{${2:r,g,b}}"
      }
    }
  ],
  "envs": [
    {
      "name": "puyotikz"
    },
    {
      "name": "puyotikz",
      "arg": {
        "format": "[]",
        "snippet": "[${1:scale}]"
      }
    }
  ],
  "keys": {
    "\\puyoboard,\\puyogrid": [
      "ncols=${1:number}\r",
      "nrows=${1:number}\r",
      "nhidrows=${1:number}\r",
      "showlabels=${1|True,False\r|}"
    ]
  },
  "args": []
}