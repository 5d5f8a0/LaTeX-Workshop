{
  "deps": [
    {
      "name": "eso-pic"
    },
    {
      "name": "ifpdf"
    },
    {
      "name": "ifxetex"
    },
    {
      "name": "xkeyval"
    },
    {
      "name": "datatool",
      "if": "ocgtabular"
    },
    {
      "name": "tikz",
      "if": "ocgtabular"
    },
    {
      "name": "listings",
      "if": "ocgtabular"
    }
  ],
  "macros": [
    {
      "name": "setocgtabularheader",
      "if": "ocgtabular",
      "arg": {
        "format": "{}{}",
        "snippet": "{${1:column name}}{${2:header%text}}"
      }
    },
    {
      "name": "toggleocgs",
      "arg": {
        "format": "{}{}",
        "snippet": "{${1:layerid1 layerid2 ...}}{${2:display}}"
      }
    },
    {
      "name": "toggleocgs",
      "arg": {
        "format": "[]{}{}",
        "snippet": "[${3:option%keyvals}]{${1:layerid1 layerid2 ...}}{${2:display}}"
      }
    },
    {
      "name": "showocgs",
      "arg": {
        "format": "{}{}",
        "snippet": "{${1:layerid1 layerid2 ...}}{${2:display}}"
      }
    },
    {
      "name": "showocgs",
      "arg": {
        "format": "[]{}{}",
        "snippet": "[${3:option%keyvals}]{${1:layerid1 layerid2 ...}}{${2:display}}"
      }
    },
    {
      "name": "hideocgs",
      "arg": {
        "format": "{}{}",
        "snippet": "{${1:layerid1 layerid2 ...}}{${2:display}}"
      }
    },
    {
      "name": "hideocgs",
      "arg": {
        "format": "[]{}{}",
        "snippet": "[${3:option%keyvals}]{${1:layerid1 layerid2 ...}}{${2:display}}"
      }
    },
    {
      "name": "setocgs",
      "arg": {
        "format": "{}{}{}{}",
        "snippet": "{${1:tlayerid1 ...}}{${2:slayerid1 ...}}{${3:hlayerid1 ...}}{${4:display}}"
      }
    },
    {
      "name": "setocgs",
      "arg": {
        "format": "[]{}{}{}{}",
        "snippet": "[${5:option%keyvals}]{${1:tlayerid1 ...}}{${2:slayerid1 ...}}{${3:hlayerid1 ...}}{${4:display}}"
      }
    }
  ],
  "envs": [
    {
      "name": "ocgtabular",
      "if": "ocgtabular",
      "arg": {
        "format": "{}{}{}",
        "snippet": "{${1:cols}}{${2:database}}{${3:options}}"
      }
    },
    {
      "name": "ocgtabular",
      "if": "ocgtabular",
      "arg": {
        "format": "[]{}{}{}",
        "snippet": "[${4:pos}]{${1:cols}}{${2:database}}{${3:options}}"
      }
    },
    {
      "name": "ocg",
      "arg": {
        "format": "{}{}{}",
        "snippet": "{${1:layer name}}{${2:layer id}}{${3:initial visibility}}"
      }
    },
    {
      "name": "ocg",
      "arg": {
        "format": "[]{}{}{}",
        "snippet": "[${4:options%keyvals}]{${1:layer name}}{${2:layer id}}{${3:initial visibility}}"
      }
    }
  ],
  "keys": {
    "\\usepackage/ocg-p#c": [
      "ocgtabular\r"
    ],
    "\\begin{ocg}": [
      "printocg=${1|always,never,ifvisible\r|}",
      "exportocg=${1|always,never,ifvisible\r|}",
      "listintoolbar=${1|always,never,iffirstuse\r|}"
    ],
    "\\toggleocgs,\\showocgs,\\hideocgs,\\setocgs": [
      "triggerocg=${1|onareaenter,onareaexit,onmousedown,onmouseup,allactions\r|}"
    ]
  },
  "args": [
    "\\usepackage/ocg-p#c"
  ]
}