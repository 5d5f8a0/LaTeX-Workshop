// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version":"2.0.0",
    "tasks":[
        {
            "type":"npm",
            "script":"watch",
            "problemMatcher":"$tsc-watch",
            "isBackground":true,
            "presentation":{
                "reveal":"silent"
            },
            "group":{
                "kind":"build",
                "isDefault":true
            },
            "detail": "Reveal the terminal on errors."
        },
        {
            "type":"npm",
            "script":"watch-alias",
            "problemMatcher":"$tsc-watch",
            "isBackground":true,
            "presentation":{
                "reveal":"never"
            },
            "group":{
                "kind":"build",
                "isDefault":true
            },
            "detail": "Never reveal the terminal on errors."
        }
    ]
}
